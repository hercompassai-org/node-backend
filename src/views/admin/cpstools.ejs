<%- include("../components/adminHeader", { title: title }) %>

    <%- include("../components/adminSidebar") %>

        <main class="app-main">
            <!--begin::App Content Header-->
            <div class="app-content-header">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="mb-0">CPS Tools</h3>
                        </div>
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-end gap-2 mb-0">
                                <button type="button" class="btn btn-primary rounded-3 px-3">
                                    <i class="bi bi-arrow-clockwise me-1"></i> Reset Partner Links
                                </button>
                                <button type="button" class="btn btn-primary rounded-3 px-3">
                                    <i class="bi bi-send-fill me-1"></i> Send Partner Digest
                                </button>
                                <div class="dropdown ms-auto">
                                    <button type="button" class="btn btn-outline-secondary dropdown-toggle"
                                        data-bs-toggle="dropdown">
                                        Export
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-filetype-csv me-2"></i>
                                                Export as CSV</a></li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-filetype-pdf me-2"></i>
                                                Export as PDF</a></li>
                                        <li>
                                            <hr class="dropdown-divider">
                                        </li>
                                        <li><a class="dropdown-item" href="#"><i class="bi bi-share me-2"></i> Copy
                                                Dashboard Link</a></li>
                                    </ul>
                                </div>
                            </ol>
                        </div>
                    </div>
                    <!--end::Row-->
                </div>
                <!--end::Container-->
            </div>
            <!--end::App Content Header-->
            <!--begin::App Content-->
            <div class="app-content">
                <!--begin::Container-->
                <div class="container-fluid">
                    <!--begin::Row-->
                    <!-- Row 2: Partner Metrics -->
                    <div class="row g-3">
                        <!-- Card 1: Number of Partners -->
                        <div class="col-lg-3 col-12">
                            <div class="card text-white position-relative"
                                style="background-color:#17a2b8; border:none; border-radius:10px; overflow:hidden;">
                                <div class="card-body">
                                    <h3 class="fw-bold mb-1">
                                        <%= metrics.partners %>
                                    </h3>
                                    <p class="mb-0">Number of Partners</p>
                                    <span class="position-absolute top-50 end-0 translate-middle-y me-3"
                                        style="font-size:3rem; opacity:0.3;">
                                        <i class="bi bi-person-heart"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Card 2: Partner Activation Rate -->
                        <div class="col-lg-3 col-12">
                            <div class="card text-white position-relative"
                                style="background-color:#6f42c1; border:none; border-radius:10px;">
                                <div class="card-body">
                                    <h3 class="fw-bold mb-1">
                                        <%= metrics.activationRate %>%
                                    </h3>
                                    <p class="mb-0">Partner Activation Rate</p>
                                    <span class="position-absolute top-50 end-0 translate-middle-y me-3"
                                        style="font-size:3rem; opacity:0.3;">
                                        <i class="bi bi-graph-up-arrow"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <!-- Card 3: Digest Open Rate -->
                        <div class="col-lg-3 col-12">
                            <div class="card text-white position-relative"
                                style="background-color:#20c997; border:none; border-radius:10px;">
                                <div class="card-body">
                                    <h3 class="fw-bold mb-1">
                                        <%= metrics.recentOpenRate %>%
                                    </h3>
                                    <p class="mb-0">Digest Open Rate</p>
                                    <span class="position-absolute top-50 end-0 translate-middle-y me-3"
                                        style="font-size:3rem; opacity:0.3;">
                                        <i class="bi bi-envelope-open-fill"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-3 col-12">
                            <div class="card text-danger position-relative"
                                style="background-color:#ffcccc; border:none; border-radius:10px;">
                                <div class="card-body">
                                    <h3 class="fw-bold mb-1"><i class="bi bi-arrow-down"></i>
                                        <%= metrics.openRateDrop %>%
                                    </h3>
                                    <p class="mb-0">Digest Open Rate Drops</p>
                                    <span class="position-absolute top-50 end-0 translate-middle-y me-3"
                                        style="font-size:3rem; opacity:0.3;">
                                        <i class="bi bi-exclamation-triangle-fill"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                    </div>


                    <!--end::Row-->
                    <div class="row g-4 mt-2 mb-4">
                        <!-- User Consents Table -->
                        <div class="col-6 d-flex">
                            <div class="card dashboard-card flex-fill h-100 shadow-sm ">
                                <div
                                    class="card-header dashboard-header d-flex justify-content-between align-items-center">
                                    <h5 class="card-title mb-0">User Consents</h5>

                                    <div class="d-flex align-items-center gap-2">
                                        <input type="text" id="partnerFilter"
                                            class="form-control form-control-sm d-inline w-auto"
                                            placeholder="Filter by Partner ID">

                                        <!-- Export Dropdown -->
                                        <div class="dropdown">
                                            <button class="btn btn-sm btn-primary dropdown-toggle pb-0" type="button"
                                                id="exportConsentDropdown" data-bs-toggle="dropdown"
                                                aria-expanded="false">
                                                <i class="bi bi-download me-1"></i> Export As
                                            </button>
                                            <ul class="dropdown-menu dropdown-menu-end"
                                                aria-labelledby="exportConsentDropdown">
                                                <li><a class="dropdown-item" href="#" id="exportCsv">CSV</a></li>
                                                <li><a class="dropdown-item" href="#" id="exportExcel">Excel</a></li>
                                                <li><a class="dropdown-item" href="#" id="exportPdf">PDF</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>

                                <div class="dashboard-body table-responsive p-3 bg-white">
                                    <table class="table table-striped table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>User ID</th>
                                                <th>Partner ID</th>
                                                <th>Scopes</th>
                                                <th>Created At</th>
                                            </tr>
                                        </thead>
                                        <tbody id="consentTableBody">
                                            <% if (consents && consents.length) { %>
                                                <% consents.forEach(c=> { %>
                                                    <tr>
                                                        <td>
                                                            <%= c.user_id %>
                                                        </td>
                                                        <td>
                                                            <%= c.partner_id %>
                                                        </td>

                                                        <td>
                                                            <% if (Array.isArray(c.shared_fields)) { %>
                                                                <%= c.shared_fields.join(", ") %>
                        <% } else { %>
                            <%= c.shared_fields %>
                        <% } %>
                    </td>

                    <td><%= new Date(c.last_shared).toISOString().slice(0, 10) %></td>
                </tr>
            <% }); %>
        <% } else { %>
            <tr>
                <td colspan=" 4" class="text-center text-muted">No consent records found.
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                        </tbody>
                                    </table>


                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </main>


        <script>
            document.getElementById('partnerFilter').addEventListener('input', function () {
                const filter = this.value.toLowerCase();
                const rows = document.querySelectorAll('#consentTableBody tr');
                rows.forEach(row => {
                    const partnerId = row.cells[1].textContent.toLowerCase();
                    row.style.display = partnerId.includes(filter) ? '' : 'none';
                });
            });
        </script>




        <%- include("../components/adminFooter") %>